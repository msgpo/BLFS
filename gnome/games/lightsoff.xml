    <bridgehead renderas="sect4">Lightsoff Dependencies</bridgehead>

    <bridgehead renderas="sect5">Required</bridgehead>
    <para role="required">
      <xref linkend="clutter-gtk"/>,
      <xref linkend="python2"/>,
