        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">GNOME Sound Recorder Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="gtk3"/>,
      <xref linkend="gdk-pixbuf"/>, and
      <xref linkend="gjs"/>
    </para>                          

    <bridgehead renderas="sect4">Recommended</bridgehead>
