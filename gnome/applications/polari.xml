      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">Polari Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="glib2"/>,
      <xref linkend="gtk3"/>, and
      <xref linkend="telepathy-glib"/>
    </para>

    <bridgehead renderas="sect4">Recommended</bridgehead>
